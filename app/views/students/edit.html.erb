<%= form_for @student, :url => { :controller => 'students', :action => 'update', :id=>@student } do |f| %>
  <div class="edl">
    <%= f.label :name, "姓名:" %>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="edl">
    <%= f.label :weight, "体重:" %>
    <%= f.text_field :weight %>
  </div>
  <br>
  <div class="edl">
    <%= f.label :height, "身高:" %>
    <%= f.text_field :height %>
  </div>
  <br>
  <div class="edl">
    <%= f.label :color, "颜色" %>
    <%= f.text_field :color %>
  </div>
  <br>
  <div class="edl">    
    <%= f.label :gpa, "GPA:" %>
    <%= f.text_field :gpa %>
  </div>  
  <br>
  <div class="edl">    
    <%= f.label :description, "自我介绍:" %>
    <%= f.text_area :description %>
  </div> 
  <br>
  <div class="edl">    
    <%= f.label :sex, "性别:" %>
    <%= f.text_field :sex %>
  </div> 
  <br>

    <%= f.submit "更新" %>
<% end %>