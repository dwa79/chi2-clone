
<%= form_for @student, :url => { :controller => 'students', :action => 'create' } do |f| %>
  <div class="newp">
    <%= f.label :name, "姓名:" %>
    <%= f.text_field :name %>
  </div><br><br><br>
  
  <div class="newp">
    <%= f.label :weight, "体重（斤）:" %>
    <%= f.text_field :weight %>
  </div><br><br><br>
  <div class="newp">
    <%= f.label :height, "身高（厘米）:" %>
    <%= f.text_field :height %>
  </div><br><br><br>
  <div class="newp">
    <%= f.label :color, "挑选你的颜色（请输入英文：red,gold,purple...\n或者查看颜色代码):" %>
    <%= f.text_field :color %>
  </div>  <br> <p style="text-align:center;color:#20B2AA">颜色代码:<%= link_to "点击这里", "", :onclick => "col();" %>(记得带上"#"符号)</p> <br><br>
  <div class="newp">    
    <%= f.label :gpa, "GPA:" %>
    <%= f.text_field :gpa %>
  </div>   <br> <br><br>
  <div class="newp">    
    <%= f.label :description, "自我介绍" %>
    <%= f.text_area :description %>
  </div>    <br><br><br>
  <div class="newp">    
    <%= f.label :sex, "性别" %>
    <%= f.text_field :sex %>
  </div>   <br> <br>

    <%= f.submit "完成" %>
<% end %>